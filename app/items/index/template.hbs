<div class="row">
  <div class="col-md-9">
    <h2>Your search for "{{q}}" yielded {{model.total}} items</h2>
  </div>
  <div class="col-md-3">
    {{search-form q=q onSearch=(action "doSearch") class="search-form-inline"}}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-responsive table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Type</th>
          <th>Owner</th>
          <th class="text-center">Info</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.results as |item|}}
          <tr>
            <td>{{item.title}}</td>
            <td>{{item.type}}</td>
            <td>{{item.owner}}</td>
            <td class="text-center">
              {{#link-to "items.item" item.id}}
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
              {{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{item-list-pager model=model num=num}}
  </div>
</div>
