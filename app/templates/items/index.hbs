<div class="row mb-2">
  <div class="col-9">
    <h2>Your search for "{{q}}" yielded {{format-number model.total}} items</h2>
  </div>
  <div class="col-3">
    {{ago-search q=q onSearch=(action "doSearch") class="search-form-inline" size="sm"}}
  </div>
</div>
<div class="row mb-3">
  <div class="col-12">
    {{extents-map items=model.results}}
  </div>
</div>
<div class="row">
  <div class="col-12">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Type</th>
          <th>Owner</th>
          <th class="text-center">Info</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.results as |item|}}
          <tr>
            <td>{{item.title}}</td>
            <td>{{item.type}}</td>
            <td>{{item.owner}}</td>
            <td class="text-center">
              {{#link-to "items.item" item.id}}
                Details
              {{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{item-pager
      pageSize=num
      totalCount=model.total
      pageNumber=pageNumber
      changePage=(action "changePage")
    }}
  </div>
</div>
